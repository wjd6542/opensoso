<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="branch">
	
	<!--  user 검색 List -->
	<select id="selectBranchList" parameterType="hashmap" resultType="hashmap">
		select
			*
		from
			branch
		order by family desc, depth asc
	</select>
	
	<!--  user 검색 -->
	<select id="selectBranch" parameterType="hashmap" resultType="hashmap">
			select
				*
			from
				branch
			where id = #{id} and password =  #{pw}
	</select>

	<!-- ID 중복확인 -->
	<select id="idCheck" parameterType="string" resultType="string">
		select
			id
		from
			branch
		where
			id=#{id}
	</select>
	
